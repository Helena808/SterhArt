{% extends 'base.html.twig' %}

{% block title %}Добавить проект{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="/portfolio">Портфолио</a> 
		</li>
		<li class="breadcrumb-item active" aria-current="page">
			Добавить проект
		</li>
	</ol>
</nav>

<div>
	<form action="/project/addPortfolioSubmit" enctype="multipart/form-data" method="POST">
		<div class="form-group row">
			<label for="projectTitle" class="col-sm-2 col-form-label col-form-label-lg">Название</label>
			<div class="col-sm-10">
				<input type="text" name="projectTitle" id="projectTitle" class="form-control">
			</div>
		</div>	
		
		<div class="form-group row">
			<label for="city" class="col-sm-2 col-form-label col-form-label-lg">Город</label>
			<div class="col-sm-10">
				<input type="text" name="city" id="city" class="form-control">
			</div>
		</div>
		
		<div class="form-group row">
			<label for="description" class="col-sm-2 col-form-label col-form-label-lg">Описание</label>
			<div class="col-sm-10">
				<textarea name="description" id="description" placeholder="Введите описание" class="form-control" rows="10"></textarea>
			</div>
		</div>

		<div class="custom-file">
			<input type="file" name="photos[]" accept="image/*" multiple class="custom-file-input" id="images">
			<label class="custom-file-label" for="photos" data-browse="Выбрать">Выберите файлы</label>
		</div>
	
		<button type="reset" class="btn btn-warning mb-2">Очистить форму</button>
		<button type="submit" class="btn btn-primary mb-2">Добавить проект</button>
	</form>

</div>


{% endblock %}
