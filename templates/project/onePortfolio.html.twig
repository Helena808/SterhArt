{% extends 'base.html.twig' %}

{% block title %}{{project.projectTitle}}{% endblock %}

{% block body %}
<div class="container p-2">
  <div class="row align-items-center mx-0 my-1" aria-label="breadcrumb">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb p-2 m-0">
        <li class="breadcrumb-item">
          <a href="/portfolio">Портфолио</a> 
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          <a href="/portfolio/{{project.id}}">"{{project.projectTitle}}"</a> 
        </li>
      </ol>
    </nav>
  </div>
</div>

<div class="container">
	{% if is_granted ('ROLE_ADMIN') %}
    <div class="d-flex justify-content-end my-3">
      <div class="col-6 col-md-3 col-xl-2 d-flex justify-content-end mx-0 pr-1 mt-2 mt-md-0 p-0 px-2">
        <a href="/portfolio/{{ project.id }}/edit" role="button" class="btn btn-primary w-100 w-md-50">Редактировать</a>
      </div>
      <div class="col-6 col-md-3 col-xl-2 d-flex justify-content-end mx-0 pr-1 mt-2 mt-md-0 p-0 px-2">
        <a href="/portfolio/{{ project.id }}/delete" role="button" class="btn btn-danger w-100 w-md-50">Удалить проект</a>
      </div>
    </div>
  {% endif %}

  <h4 class="card-title">{{project.projectTitle}}</h4>
	<p><em>Город: {{project.city}}</em></p>
	<p class="card-text">{{project.description}}</p>

  {# ГАЛЕРЕЯ #}
    <div class="container m-0 p-0"> 
      {% if project.photos %}
        <div class="grid">     
          {% for photo in project.photos %}
            <div class="grid--item">
              <a data-fancybox="portfolioGallery" href="{{ asset('images/photos/') ~ photo.name }}" data-caption="Caption #{{ loop.index0 }}">
                <img class="img-fluid" src="{{ asset('images/photos/') ~ photo.name }}" alt="oops!">
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %} 
    </div>


	</div>
</div>


{% endblock %}




