{% extends 'base.html.twig' %}

{% block title %}Новый проект{% endblock %}

{% block body %}
<div class="container p-2">
	<div class="row align-items-center mx-0 my-3" aria-label="breadcrumb">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb p-2 m-0">
				<li class="breadcrumb-item">
					<a href="/exec-cabinet">Кабинет исполнителя</a> 
				</li>
				<li class="breadcrumb-item active" aria-current="page">
					Новый проект
				</li>
			</ol>
		</nav>
	</div>
</div>

<div>
	<form action="/exec-cabinet/addProject" enctype="multipart/form-data" method="POST">
		<div class="form-group row">
			
			<label for="selectClient" class="col-sm-2 col-form-label col-form-label-lg">Заказчик</label>
			
			<div class="col-sm-6 col-lg-7">
				<select name = "user_id" id="selectClient" class="form-control">
					{% for user in users %}
					<option value="{{user.id}}">{{user.name}} {{user.surname}}</option>
					{% endfor %}
				</select>
			</div>

			<div class="col-sm-4 col-lg-3 mt-2 mt-sm-0">
				<a href="/register" role="button" class="btn btn-outline-info">Новый заказчик</a>
			</div>
		</div>	

		<div class="form-group row">
			<label for="projectTitle" class="col-sm-2 col-form-label col-form-label-lg">Название</label>
			<div class="col-sm-10">
				<input type="text" name="projectTitle" id="projectTitle" class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="city" class="col-sm-2 col-form-label col-form-label-lg">Город</label>
			<div class="col-sm-10">
				<input type="text" name="city" id="city" class="form-control">
			</div>
		</div>

		<div class="form-group row">
			<label for="address" class="col-sm-2 col-form-label col-form-label-lg">Адрес</label>
			<div class="col-sm-10">
				<input type="text" name="address" id="address" class="form-control">
			</div>
		</div>
				
		<button type="reset" class="btn btn-warning mb-2">Очистить форму</button>
		<button type="submit" class="btn btn-primary mb-2">Добавить проект</button>
	</form>
</div>	




{% endblock %}
